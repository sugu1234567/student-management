@{
    ViewData["Title"] = "Quản lý Điểm";
}

<div ng-controller="GradeController">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-chart-line"></i> Quản lý Điểm</h2>
        <button class="btn btn-primary"
                ng-if="role === 1 || role === 2"
                ng-click="actions.openAddForm()"
                ng-disabled="loading">
            <i class="fas fa-plus"></i> Nhập điểm
        </button>
    </div>

    <!-- Filter -->
    <div ng-if="role === 1 || role === 2"
         class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <label class="form-label">Tìm kiếm:</label>
                    <div class="input-group">
                        <input type="text"
                               class="form-control"
                               ng-model="searchKeyword"
                               placeholder="Tên, mã SV..."
                               ng-keypress="$event.keyCode == 13 && actions.search()">
                        <button class="btn btn-outline-secondary"
                                ng-click="actions.search()"
                                ng-disabled="loading">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Môn học:</label>
                    <select class="form-select"
                            ng-model="searchSubjectId"
                            ng-change="actions.search()">
                        <option value="">-- Tất cả --</option>
                        <option ng-repeat="subject in subjects" ng-value="subject.subjectId">
                            {{subject.subjectName}}
                        </option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Lớp:</label>
                    <select class="form-select"
                            ng-model="searchClassId"
                            ng-change="actions.search()">
                        <option value="">-- Tất cả --</option>
                        <option ng-repeat="class in classes"
                                ng-value="class.classId">
                            {{class.className}}
                        </option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <button class="btn btn-secondary w-100" ng-click="actions.refresh()" ng-disabled="loading">
                        <i class="fas fa-sync-alt"></i> Làm mới
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading Spinner -->
    <div ng-show="loading" class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Đang tải...</span>
        </div>
        <p class="mt-2">Đang xử lý...</p>
    </div>

    <!-- Grades Table -->
    <div class="card" ng-show="!loading">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th style="width: 5%">STT</th>
                            <th style="width: 15%">Mã SV</th>
                            <th style="width: 20%">Họ tên</th>
                            <th style="width: 15%">Lớp</th>
                            <th style="width: 15%">Môn học</th>
                            <th style="width: 8%">Điểm</th>
                            <th style="width: 12%">Xếp loại</th>
                            <th style="width: 10%" ng-if="canEdit()" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="grade in grades track by grade.gradeId">
                            <td>{{$index + 1}}</td>
                            <td><strong>{{grade.studentCode}}</strong></td>
                            <td>{{grade.studentName}}</td>
                            <td>{{grade.className}}</td>
                            <td>{{grade.subjectName}}</td>
                            <td>
                                <strong class="text-primary">{{grade.score | number:1}}</strong>
                            </td>
                            <td>
                                <span class="badge"
                                      ng-class="{
                                          'bg-success': grade.classification === 1,
                                          'bg-info': grade.classification === 2,
                                          'bg-primary': grade.classification === 3,
                                          'bg-warning': grade.classification === 4,
                                          'bg-danger': grade.classification === 5
                                      }">
                                    {{getClassificationName(grade.classification)}}
                                </span>
                                <div class="text-muted small">
                                    HK{{grade.semester}} - {{grade.academicYear}}
                                </div>
                            </td>
                            <td class="text-center" ng-if="role === 1 || role === 2">
                                <button class="btn btn-sm btn-info"
                                        ng-click="actions.openEditForm(grade)"
                                        title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-danger ms-1"
                                        ng-click="actions.delete(grade.gradeId)"
                                        ng-disabled="loading"
                                        title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                        <tr ng-show="grades.length === 0">
                            <td ng-attr-colspan="{{(role === 1 || role === 2) ? 8 : 7}}" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <p>Không có dữ liệu điểm</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal Add/Edit Grade -->
    <div class="modal fade" id="gradeModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-chart-line"></i>
                        {{isEdit ? 'Cập nhật điểm' : 'Nhập điểm mới'}}
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form name="gradeForm" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Sinh viên <span class="text-danger">*</span></label>
                                <select class="form-select"
                                        ng-model="grade.studentId"
                                        ng-disabled="isEdit"
                                        ng-options="student.studentId as (student.fullName + ' (' + student.studentCode + ')') for student in allStudents"
                                        required>
                                    <option value="">-- Chọn sinh viên --</option>
                                </select>
                                <small class="text-muted" ng-if="isEdit">
                                    * Không thể thay đổi sinh viên khi sửa điểm
                                </small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Môn học <span class="text-danger">*</span></label>
                                <select class="form-select"
                                        ng-model="grade.subjectId"
                                        ng-disabled="isEdit"
                                        ng-options="subject.subjectId as (subject.subjectName + ' (' + subject.subjectCode + ')') for subject in subjects"
                                        required>
                                    <option value="">-- Chọn môn học --</option>
                                </select>
                                <small class="text-muted" ng-if="isEdit">
                                    * Không thể thay đổi môn học khi sửa điểm
                                </small>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Điểm <span class="text-danger">*</span></label>
                                <input type="number"
                                       class="form-control"
                                       ng-model="grade.score"
                                       ng-change="actions.calculateClassification()"
                                       placeholder="0.0"
                                       min="0"
                                       max="10"
                                       step="0.1"
                                       required>
                                <small class="text-muted">Từ 0 đến 10</small>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Xếp loại <span class="text-danger">*</span></label>
                                <select class="form-select"
                                        ng-model="grade.classification"
                                        required>
                                    <option value="">-- Chọn xếp loại --</option>
                                    <option ng-repeat="cls in classifications"
                                            ng-value="cls.value">
                                        {{cls.label}}
                                    </option>
                                </select>
                                <small class="text-muted">Tự động điền theo điểm</small>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Học kỳ <span class="text-danger">*</span></label>
                                <select class="form-select" ng-model="grade.semester" required>
                                    <option value="">-- Chọn học kỳ --</option>
                                    <option value="1">Học kỳ 1</option>
                                    <option value="2">Học kỳ 2</option>
                                    <option value="3">Học kỳ 3 (Hè)</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label class="form-label">Năm học <span class="text-danger">*</span></label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="grade.academicYear"
                                       placeholder="VD: 2024-2025"
                                       required>
                                <small class="text-muted">Định dạng: YYYY-YYYY (VD: 2024-2025)</small>
                            </div>
                        </div>

                        <!-- Preview xếp loại -->
                        <div class="alert alert-info" ng-if="grade.score">
                            <i class="fas fa-info-circle"></i>
                            <strong>Xếp loại dự kiến:</strong>
                            <span class="badge ms-2"
                                  ng-class="{
                                      'bg-success': grade.classification === 1,
                                      'bg-info': grade.classification === 2,
                                      'bg-primary': grade.classification === 3,
                                      'bg-warning': grade.classification === 4,
                                      'bg-danger': grade.classification === 5
                                  }">
                                {{getClassificationName(grade.classification)}}
                            </span>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" ng-click="actions.cancel()">
                        <i class="fas fa-times"></i> Hủy
                    </button>
                    <button type="button"
                            class="btn btn-primary"
                            ng-click="actions.save()"
                            ng-disabled="loading || gradeForm.$invalid">
                        <i class="fas fa-save"></i>
                        <span ng-if="!loading">{{isEdit ? 'Cập nhật' : 'Lưu điểm'}}</span>
                        <span ng-if="loading">Đang lưu...</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        background-color: #007bff;
        color: white;
        font-weight: 600;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
    }

    .card {
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        border: none;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.35rem 0.65rem;
    }

    .alert-info {
        border-left: 4px solid #17a2b8;
    }
</style>