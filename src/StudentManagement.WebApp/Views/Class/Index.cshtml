@{
    ViewData["Title"] = "Quản lý Lớp học";
}

<div ng-controller="ClassController">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users"></i> Quản lý Lớp học</h2>
        <button class="btn btn-primary" ng-click="actions.openAddForm()" ng-disabled="loading">
            <i class="fas fa-plus"></i> Thêm lớp học
        </button>
    </div>

    <!-- Search -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text"
                               class="form-control"
                               placeholder="Tìm kiếm theo tên lớp..."
                               ng-model="searchKeyword"
                               ng-keypress="$event.keyCode == 13 && actions.search()">
                        <button class="btn btn-primary" ng-click="actions.search()" ng-disabled="loading">
                            Tìm kiếm
                        </button>
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-secondary w-100" ng-click="actions.refresh()" ng-disabled="loading">
                        <i class="fas fa-sync-alt"></i> Làm mới
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading Spinner -->
    <div ng-show="loading" class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Đang tải...</span>
        </div>
        <p class="mt-2">Đang xử lý...</p>
    </div>

    <!-- Classes Table -->
    <div class="card" ng-show="!loading">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th style="width: 10%">STT</th>
                            <th style="width: 40%">Tên lớp</th>
                            <th style="width: 35%">Khoa</th>
                            <th style="width: 15%" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="class in classes track by class.classId">
                            <td>{{$index + 1}}</td>
                            <td><strong>{{class.className}}</strong></td>
                            <td>{{class.departmentName || 'N/A'}}</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-primary ms-1"
                                        ng-click="actions.viewStudents(class.classId)"
                                        title="Xem">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-info"
                                        ng-click="actions.openEditForm(class)"
                                        ng-if = "role == 1"
                                        title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-danger ms-1"
                                        ng-click="actions.delete(class.classId)"
                                        ng-if="role == 1"
                                        title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                        <tr ng-show="classes.length === 0">
                            <td colspan="4" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <p>Không có dữ liệu lớp học</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal Add/Edit Class -->
    <div class="modal fade" id="classModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-users"></i>
                        {{isEdit ? 'Cập nhật lớp học' : 'Thêm mới lớp học'}}
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form name="classForm" novalidate>
                        <div class="mb-3">
                            <label class="form-label">Tên lớp <span class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control"
                                   ng-model="class.className"
                                   placeholder="Nhập tên lớp"
                                   required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Khoa <span class="text-danger">*</span></label>
                            <select class="form-select" ng-model="class.departmentId" required>
                                <option value="0">-- Chọn khoa --</option>
                                <option ng-repeat="dept in departments" value="{{dept.departmentId}}">
                                    {{dept.departmentName}}
                                </option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" ng-click="actions.cancel()">
                        <i class="fas fa-times"></i> Hủy
                    </button>
                    <button type="button" class="btn btn-primary" ng-click="actions.save()" ng-disabled="loading">
                        <i class="fas fa-save"></i> {{isEdit ? 'Cập nhật' : 'Thêm mới'}}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>