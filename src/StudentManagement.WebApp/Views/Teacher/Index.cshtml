@{
    ViewData["Title"] = "Quản lý Giáo viên";
}

<div ng-controller="TeacherController">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-chalkboard-teacher"></i> Quản lý Giáo viên</h2>
        <button class="btn btn-primary" ng-click="actions.openAddForm()" ng-disabled="loading">
            <i class="fas fa-plus"></i> Thêm giáo viên
        </button>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text"
                               class="form-control"
                               placeholder="Tìm kiếm theo mã, tên, email, số điện thoại..."
                               ng-model="searchKeyword"
                               ng-keypress="$event.keyCode == 13 && actions.search()">
                        <button class="btn btn-primary" ng-click="actions.search()" ng-disabled="loading">
                            Tìm kiếm
                        </button>
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-secondary w-100" ng-click="actions.refresh()" ng-disabled="loading">
                        <i class="fas fa-sync-alt"></i> Làm mới
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading Spinner -->
    <div ng-show="loading" class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Đang tải...</span>
        </div>
        <p class="mt-2">Đang xử lý...</p>
    </div>

    <!-- Teachers Table -->
    <div class="card" ng-show="!loading">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th style="width: 5%">STT</th>
                            <th style="width: 5%">Mã GV</th>
                            <th style="width: 15%">Họ và tên</th>
                            <th style="width: 15%">Ngày sinh</th>
                            <th style="width: 18%">Email</th>
                            <th style="width: 12%">Số điện thoại</th>
                            <th style="width: 15%">Địa chỉ</th>
                            <th style="width: 15%" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="teacher in buildin.getPaginatedTeachers() track by teacher.teacherId">
                            <td>{{(currentPage - 1) * itemsPerPage + $index + 1}}</td>
                            <td><strong>{{teacher.teacherCode}}</strong></td>
                            <td>{{teacher.fullName}}</td>
                            <td>{{teacher.dateOfBirth | date:'dd/MM/yyyy'}}</td>
                            <td>
                                <a href="mailto:{{teacher.email}}">{{teacher.email}}</a>
                            </td>
                            <td>{{teacher.phone}}</td>
                            <td>{{teacher.address || 'N/A'}}</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-info"
                                        ng-click="actions.openEditForm(teacher.teacherId)"
                                        title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-danger ms-1"
                                        ng-click="actions.delete(teacher.teacherId)"
                                        title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                        <tr ng-show="filteredTeachers.length === 0">
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <p>Không có dữ liệu giáo viên</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="d-flex justify-content-between align-items-center mt-3" ng-show="filteredTeachers.length > 0">
                <div>
                    Hiển thị {{(currentPage - 1) * itemsPerPage + 1}} - {{currentPage * itemsPerPage > filteredTeachers.length ? filteredTeachers.length : currentPage * itemsPerPage}}
                    trong tổng số {{filteredTeachers.length}} giáo viên
                </div>
                <nav>
                    <ul class="pagination mb-0">
                        <li class="page-item" ng-class="{disabled: currentPage === 1}">
                            <a class="page-link" href="#" ng-click="actions.previousPage()">Trước</a>
                        </li>
                        <li class="page-item"
                            ng-repeat="page in [] | range:buildin.getTotalPages()"
                            ng-class="{active: page === currentPage}">
                            <a class="page-link" href="#" ng-click="actions.goToPage(page)">{{page}}</a>
                        </li>
                        <li class="page-item" ng-class="{disabled: currentPage === buildin.getTotalPages()}">
                            <a class="page-link" href="#" ng-click="actions.nextPage()">Sau</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <!-- Modal Add/Edit Teacher -->
    <div class="modal fade" id="teacherModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-chalkboard-teacher"></i>
                        {{isEdit ? 'Cập nhật giáo viên' : 'Thêm mới giáo viên'}}
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form name="teacherForm" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Mã giáo viên <span class="text-danger">*</span></label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="teacher.teacherCode"
                                       placeholder="Nhập mã giáo viên"
                                       required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Họ và tên <span class="text-danger">*</span></label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="teacher.fullName"
                                       placeholder="Nhập họ và tên"
                                       required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email <span class="text-danger">*</span></label>
                                <input type="email"
                                       class="form-control"
                                       ng-model="teacher.email"
                                       placeholder="example@email.com"
                                       required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="teacher.phone"
                                       placeholder="0123456789"
                                       required>
                            </div>
                        </div>
                        <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Ngày sinh <span class="text-danger">*</span></label>
                                    <input type="date"
                                           class="form-control"
                                           ng-model="teacher.dateOfBirth"
                                           placeholder="Nhập ngày sinh"
                                           required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Giới tính <span class="text-danger">*</span></label>
                                    <select class="form-select" ng-model="teacher.gender" required>
                                        <option value="1">Nam</option>
                                        <option value="2">Nữ</option>
                                        <option value="3">Khác</option>
                                    </select>
                                </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Địa chỉ</label>
                            <textarea class="form-control"
                                      ng-model="teacher.address"
                                      rows="2"
                                      placeholder="Nhập địa chỉ"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3" ng-if="!isEdit">
                                <label class="form-label">Username <span class="text-danger">*</span></label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="teacher.username"
                                       placeholder="Nhập tên đăng nhập"
                                       required>
                            </div>
                            <div class="col-md-6 mb-3" ng-if="!isEdit">
                                <label class="form-label">Password <span class="text-danger">*</span></label>
                                <input type="password"
                                       class="form-control"
                                       ng-model="teacher.password"
                                       placeholder="Nhập mật khẩu"
                                       required>
                            </div>
                        </div>
                        
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" ng-click="actions.cancel()">
                        <i class="fas fa-times"></i> Hủy
                    </button>
                    <button type="button" class="btn btn-primary" ng-click="actions.save()" ng-disabled="loading">
                        <i class="fas fa-save"></i> {{isEdit ? 'Cập nhật' : 'Thêm mới'}}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filter for pagination -->
<script>
    angular.module('StudentManagementApp').filter('range', function() {
        return function(input, total) {
            total = parseInt(total);
            for (var i = 1; i <= total; i++) {
                input.push(i);
            }
            return input;
        };
    });
</script>

<style>
    .table th {
        background-color: #007bff;
        color: white;
        font-weight: 600;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
    }

    .card {
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        border: none;
    }

    .pagination .page-link {
        color: #007bff;
    }

    .pagination .active .page-link {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>