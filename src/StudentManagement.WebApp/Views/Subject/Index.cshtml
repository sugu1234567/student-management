@{
    ViewData["Title"] = "Quản lý Môn học";
}

<div ng-controller="SubjectController">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-book"></i> Quản lý Môn học</h2>
        <button class="btn btn-primary" ng-click="actions.openAddForm()" ng-disabled="loading">
            <i class="fas fa-plus"></i> Thêm môn học
        </button>
    </div>

    <!-- Search -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text"
                               class="form-control"
                               placeholder="Tìm kiếm theo mã, tên môn học..."
                               ng-model="searchKeyword"
                               ng-keypress="$event.keyCode == 13 && actions.search()">
                        <button class="btn btn-primary" ng-click="actions.search()" ng-disabled="loading">
                            Tìm kiếm
                        </button>
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-secondary w-100" ng-click="actions.refresh()" ng-disabled="loading">
                        <i class="fas fa-sync-alt"></i> Làm mới
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading Spinner -->
    <div ng-show="loading" class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Đang tải...</span>
        </div>
        <p class="mt-2">Đang xử lý...</p>
    </div>

    <!-- Subjects Table -->
    <div class="card" ng-show="!loading">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th style="width: 5%">STT</th>
                            <th style="width: 10%">Mã môn học</th>
                            <th style="width: 20%">Tên môn học</th>
                            <th style="width: 10%">Tín chỉ</th>
                            <th style="width: 20%">Khoa</th>
                            <th style="width: 20%">Giảng Viên</th>
                            <th style="width: 15%" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="subject in subjects track by subject.subjectId">
                            <td>{{$index + 1}}</td>
                            <td><strong>{{subject.subjectCode}}</strong></td>
                            <td>{{subject.subjectName}}</td>
                            <td>
                                <span class="text-center">{{subject.credits}}</span>
                            </td>
                            <td>{{subject.departmentName}}</td>
                            <td>{{subject.teacherName}}</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-info"
                                        ng-click="actions.openEditForm(subject)"
                                        ng-if="role == 1"
                                        title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-danger ms-1"
                                        ng-click="actions.delete(subject.subjectId)"
                                        ng-if="role == 1"
                                        title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                        <tr ng-show="subjects.length === 0">
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <p>Không có dữ liệu môn học</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal Add/Edit Subject -->
    <div class="modal fade" id="subjectModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-book"></i>
                        {{isEdit ? 'Cập nhật môn học' : 'Thêm mới môn học'}}
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form name="subjectForm" novalidate>
                        <div class="mb-3">
                            <label class="form-label">Mã môn học <span class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control"
                                   ng-model="subject.subjectCode"
                                   placeholder="Nhập mã môn học"
                                   required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tên môn học <span class="text-danger">*</span></label>
                            <input type="text"
                                   class="form-control"
                                   ng-model="subject.subjectName"
                                   placeholder="Nhập tên môn học"
                                   required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Số tín chỉ <span class="text-danger">*</span></label>
                            <input type="number"
                                   class="form-control"
                                   ng-model="subject.credits"
                                   placeholder="Nhập số tín chỉ"
                                   min="1"
                                   max="10"
                                   required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Khoa <span class="text-danger">*</span></label>
                            <select class="form-select" ng-model="subject.departmentId" required>
                                <option value="0">-- Chọn khoa --</option>
                                <option ng-repeat="dept in departments" value="{{dept.departmentId}}">
                                    {{dept.departmentName}}
                                </option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Giảng viên </label>
                            <select class="form-select" ng-model="subject.teacherId" required>
                                <option value="0">-- Chọn giảng viên --</option>
                                <option ng-repeat="t in teachers" value="{{t.teacherId}}">
                                    {{t.fullName}}
                                </option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" ng-click="actions.cancel()">
                        <i class="fas fa-times"></i> Hủy
                    </button>
                    <button type="button" class="btn btn-primary" ng-click="actions.save()" ng-disabled="loading">
                        <i class="fas fa-save"></i> {{isEdit ? 'Cập nhật' : 'Thêm mới'}}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>