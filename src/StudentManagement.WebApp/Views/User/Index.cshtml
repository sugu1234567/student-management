@{
    ViewData["Title"] = "Quản lý Tài khoản";
}

<div ng-controller="UserController">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users-cog"></i> Quản lý Tài khoản</h2>
        <button class="btn btn-primary"
                ng-click="actions.openAddForm()"
                ng-disabled="loading">
            <i class="fas fa-plus"></i> Thêm tài khoản
        </button>
    </div>

    <!-- Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <label class="form-label">Tìm kiếm:</label>
                    <div class="input-group">
                        <input type="text"
                               class="form-control"
                               ng-model="searchKeyword"
                               placeholder="Tên, email, username..."
                               ng-keypress="$event.keyCode == 13 && actions.onKeywordSearch()">
                        <button class="btn btn-outline-secondary"
                                ng-click="actions.onKeywordSearch()"
                                ng-disabled="loading">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Vai trò:</label>
                    <select class="form-select"
                            ng-model="filterRole"
                            ng-change="actions.onRoleFilterChange()">
                        <option value="">-- Tất cả --</option>
                        <option ng-repeat="role in roles" ng-value="role.value">
                            {{role.label}}
                        </option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <button class="btn btn-secondary w-100" ng-click="actions.refresh()" ng-disabled="loading">
                        <i class="fas fa-sync-alt"></i> Làm mới
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading Spinner -->
    <div ng-show="loading" class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Đang tải...</span>
        </div>
        <p class="mt-2">Đang xử lý...</p>
    </div>

    <!-- Users Table -->
    <div class="card" ng-show="!loading">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th style="width: 5%">STT</th>
                            <th style="width: 15%">Username</th>
                            <th style="width: 15%">Họ tên</th>
                            <th style="width: 20%">Email</th>
                            <th style="width: 10%">Vai trò</th>
                            <th style="width: 10%">Trạng thái</th>
                            <th style="width: 10%">Ngày tạo</th>
                            <th style="width: 15%" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="user in users track by user.userId">
                            <td>{{$index + 1}}</td>
                            <td><strong>{{user.username}}</strong></td>
                            <td>{{user.fullName}}</td>
                            <td>{{user.email}}</td>
                            <td>
                                <span>
                                    {{ actions.getRoleLabel(user.role) }}
                                </span>
                            </td>
                            <td>
                                <span>
                                    {{ user.isActive ? 'Hoạt động' : 'Khóa' }}
                                </span>
                            </td>

                            <td>{{user.createdDate | date:'dd/MM/yyyy'}}</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-info"
                                        ng-click="actions.openEditForm(user)"
                                        title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn btn-sm btn-warning ms-1"
                                        ng-click="actions.toggleStatus(user)"
                                        ng-disabled="loading || user.userId === userId"
                                        title="{{user.isActive ? 'Khóa' : 'Mở khóa'}}">
                                    <i class="fas" ng-class="user.isActive ? 'fa-lock' : 'fa-lock-open'"></i>
                                </button>
                                <button class="btn btn-sm btn-danger ms-1"
                                        ng-click="actions.delete(user.userId)"
                                        ng-disabled="loading || user.userId === userId"
                                        title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                        <tr ng-show="users.length === 0">
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <p>Không có dữ liệu tài khoản</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal Add/Edit User -->
    <div class="modal fade" id="userModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-user-plus"></i>
                        {{isEdit ? 'Cập nhật tài khoản' : 'Thêm tài khoản mới'}}
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form name="userForm" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Username <span class="text-danger">*</span></label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="user.username"
                                       ng-disabled="isEdit"
                                       placeholder="Tên đăng nhập"
                                       required>
                                <small class="text-muted" ng-if="isEdit">
                                    * Không thể thay đổi username
                                </small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email <span class="text-danger">*</span></label>
                                <input type="email"
                                       class="form-control"
                                       ng-model="user.email"
                                       placeholder="email@example.com"
                                       required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label class="form-label">Họ tên <span class="text-danger">*</span></label>
                                <input type="text"
                                       class="form-control"
                                       ng-model="user.fullName"
                                       placeholder="Họ và tên đầy đủ"
                                       required>
                            </div>
                        </div>
                        <div class="row" ng-if="!isEdit">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                                <input type="password"
                                       class="form-control"
                                       ng-model="user.password"
                                       placeholder="Tối thiểu 6 ký tự"
                                       required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Xác nhận mật khẩu <span class="text-danger">*</span></label>
                                <input type="password"
                                       class="form-control"
                                       ng-model="user.confirmPassword"
                                       placeholder="Nhập lại mật khẩu"
                                       required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Vai trò <span class="text-danger">*</span></label>
                                <select class="form-select" ng-model="user.role" required>
                                    <option value="">-- Chọn vai trò --</option>
                                    <option ng-repeat="role in roles" ng-value="role.value">
                                        {{role.label}}
                                    </option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Trạng thái</label>
                                <div class="form-check form-switch mt-2">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           ng-model="user.isActive"
                                           id="isActiveSwitch">
                                    <label class="form-check-label" for="isActiveSwitch">
                                        {{user.isActive ? 'Hoạt động' : 'Đã khóa'}}
                                    </label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" ng-click="actions.cancel()">
                        <i class="fas fa-times"></i> Hủy
                    </button>
                    <button type="button"
                            class="btn btn-primary"
                            ng-click="actions.save()"
                            ng-disabled="loading || userForm.$invalid">
                        <i class="fas fa-save"></i>
                        <span ng-if="!loading">{{isEdit ? 'Cập nhật' : 'Lưu tài khoản'}}</span>
                        <span ng-if="loading">Đang lưu...</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        background-color: #007bff;
        color: white;
        font-weight: 600;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
    }

    .card {
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        border: none;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.35rem 0.65rem;
    }

    .form-check-input:checked {
        background-color: #28a745;
        border-color: #28a745;
    }
</style>